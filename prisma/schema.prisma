generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ChampionshipStatus {
  PENDING
  INITIATED
  FINISHED
}

model Championship {
  id          String             @id @unique @default(uuid())
  name        String             @unique
  description String
  award       Int
  champion    String?
  status      ChampionshipStatus @default(PENDING)

  updatedAt DateTime @default(now()) @updatedAt
  createdAt DateTime @default(now())


  ChampionshipTeam ChampionshipTeam[]
  @@map("championship")
}

model Team {
  id           String @id @unique @default(uuid())
  name         String @unique
  abbreviation String

  updatedAt DateTime @default(now()) @updatedAt
  createdAt DateTime @default(now())


  ChampionshipTeam ChampionshipTeam[]
  @@map("team")
}

model ChampionshipTeam {
  id              String       @id @unique @default(uuid())
  id_championship String
  championship    Championship @relation(fields: [id_championship], references: [id])
  id_team         String
  team            Team         @relation(fields: [id_team], references: [id])


  @@map("championships_teams")
}
